openapi: "3.0.2"
info:
  version: 1.0.0
  title: Bank API
paths:
  /hello:
    get:
      summary: Say hello
      operationId: hello
      parameters:
        - name: user
          in: query
          description: User name to appear in greetings
          required: false
          schema:
            type: string
            default: 'world'
      responses:
        '200':
          description: Greeting
          content:
            'text/plain':
              schema:
                type: "string"
      x-yc-apigateway-integration:
        type: dummy
        http_code: 200
        http_headers:
          'Content-Type': "text/plain"
        content:
          'text/plain': "Hello again!!! {user}!\n"
  /number:
    get:
      summary: List some numbers
      operationId: listNumbers
      responses:
        '200':
          description: Another example
          content:
            'application/json':
              schema:
                type: "array"
                items:
                  type: "integer"
      x-yc-apigateway-integration:
        type: cloud_functions
        function_id: $function_id
        service_account_id: $sa_id
